<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Test Suite" parallel="false">

    <listeners>
        <listener class-name="listeners.TestResultListener"/>
        <listener class-name="listeners.ExecutionListener"/>
        <listener class-name="listeners.MethodInvocationListener"/>
        <listener class-name="listeners.RetryListener"/>
    </listeners>

    <test name="Smoke Tests Only">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="testclasses.features.LoginTest"/>
            <class name="testclasses.features.CartTests"/>
            <class name="testclasses.features.CheckOutTest"/>
            <class name="testclasses.features.LogoutTest"/>
        </classes>
    </test>

</suite>
